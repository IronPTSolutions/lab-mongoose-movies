<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Celebrities List</h2>
  <a class="btn btn-primary" href="/celebrities/new">New Celebrity</a>
</div>

{{#each celebrities as |celeb|}}
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">
        <a href="/celebrities/{{celeb.id}}">{{celeb.name}}</a>
      </h5>

      <div class="d-flex">
        <form action="/celebrities/{{celeb.id}}/delete" method="POST">
          <button type="submit" class="btn btn-danger btn-sm mr-3">Delete</button>
        </form>
        
        <a class="btn btn-primary btn-sm" href="/celebrities/{{celeb.id}}/edit">Edit</a>
      </div>
    </div>
  </div>
{{/each}}
