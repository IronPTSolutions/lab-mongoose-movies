<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Movies List</h2>
  <a class="btn btn-primary" href="/movies/new">New Movie</a>
</div>

{{#each movies as |movie|}}
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">
        <a href="/movies/{{movie.id}}">{{movie.title}}</a>
      </h5>

      <div class="d-flex">
        <form action="/movies/{{movie.id}}/delete" method="POST">
          <button type="submit" class="btn btn-danger btn-sm mr-3">Delete</button>
        </form>
        
        <a class="btn btn-primary btn-sm" href="/movies/{{movie.id}}/edit">Edit</a>
      </div>
    </div>
  </div>
{{/each}}
